{
	"tasks": {
		"lume": "deno run -A --unstable-hmr=_components/,_includes main.ts",
		"build": "deno task lume",
		"serve": "deno task lume -s"
	},
	"fmt": {
		"semiColons": false,
		"lineWidth": 100,
		"useTabs": true,
		"indentWidth": 4,
		"proseWrap": "never",
		"singleQuote": false
	},
	"importMap": "import_map.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"types": ["lume/types.ts"],
		"jsx": "react-jsx",
		"jsxImportSource": "preact"
	}
}
