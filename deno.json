{
	"tasks": {
		"build": "deno run -A main.ts",
		"serve": "deno run -A --unstable-hmr=_components/,_includes main.ts -s"
	},
	"fmt": {
		"semiColons": false,
		"lineWidth": 100,
		"useTabs": true,
		"indentWidth": 4,
		"proseWrap": "never",
		"singleQuote": false
	},
	"lint": {
		"plugins": [
			"https://deno.land/x/lume@v3.0.6/lint.ts"
		]
	},
	"imports": {
		"@std/assert": "jsr:@std/assert@^1.0.13",
		"@std/path": "jsr:@std/path@^1.1.1",
		"~/": "./",
		"lume/": "https://deno.land/x/lume@v3.0.6/",
		"lume/jsx-runtime": "https://deno.land/x/ssx@v0.1.10/jsx-runtime.ts",
		"preact": "https://esm.sh/preact@10.19.5",
		"preact/": "https://esm.sh/preact@10.19.5/"
	},
	"unstable": ["temporal", "fmt-component"],
	"compilerOptions": {
		"checkJs": true,
		"jsx": "react-jsx",
		"jsxImportSource": "lume",
		"types": [
			"lume/types.ts"
		]
	}
}
